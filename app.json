{
  "expo": {
    "name": "Tourline",
    "slug": "tourline",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5A45"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Tourline necesita acceso a tu ubicación para mostrarte guías y actividades cercanas.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Tourline necesita acceso a tu ubicación para mostrarte guías y actividades cercanas."
      },
      "config": {
        "googleMapsApiKey": ""
      },
      "bundleIdentifier": "com.anonymous.tourline"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D5A45"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": ""
        }
      },
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Tourline necesita acceso a tu ubicación para mostrarte guías y actividades cercanas."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#2D5A45",
          "sounds": [],
          "mode": "production"
        }
      ]
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#2D5A45",
      "androidMode": "default",
      "androidCollapsedTitle": "Tourline"
    },
    "extra": {
      "eas": {
        "projectId": "8b811191-ef6b-4543-ba8a-d2969cb8971e"
      }
    },
    "owner": "tourline"
  }
}
